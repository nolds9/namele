{
  "name": "namedle",
  "version": "0.0.1",
  "description": "Names Wordle",
  "repository": {
    "type": "git",
    "url": "https://github.com/nolds9/namele"
  },
  "author": "Nick Olds",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:server": "nodemon --watch server.ts --watch src/server --exec 'yarn node --experimental-specifier-resolution=node --loader ts-node/esm server.ts'",
    "dev:client": "vite --config vite.config.ts dev",
    "build": "tsc -p tsconfig.prod.json && yarn build:client && yarn build:server && yarn copy-files",
    "build:client": "vite build --outDir dist/client",
    "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "serve": "yarn build && cross-env NODE_ENV=production node --experimental-modules dist/server.js",
    "clean": "rimraf dist/",
    "copy-files": "copyfiles static/* dist/assets && copyfiles index.html dist",
    "format": "prettier --write .",
    "lint:fix": "eslint '*/**/*.{js,ts,tsx}' --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "{*.ts,*.tsx,*.js}": "yarn lint:fix",
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "autoprefixer": "^10.4.2",
    "compression": "1.7.4",
    "cross-env": "^7.0.3",
    "express": "4.17.2",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.1",
    "react-router-dom": "^6.2.1",
    "serve-static": "^1.14.2",
    "ts-node": "^10.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/compression": "1.7.2",
    "@types/concurrently": "6.4.0",
    "@types/eslint": "8.4.1",
    "@types/jest": "^27.4.0",
    "@types/node": "17.0.17",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "7.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "postcss": "8.4.6",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "3.0.22",
    "ts-jest": "^27.1.3",
    "typescript": "4.5.5",
    "vite": "2.8.1"
  }
}
